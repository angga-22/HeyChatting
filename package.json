{
  "name": "hey-chatting",
  "version": "1.0.0",
  "description": "A HeyChatting is a high-performance, real-time chat application built with Node.js, Typescript, Rxjs, WebSockets (Socket.IO), and Node.js Streams. This project showcases a modern, scalable architecture for building real-time communication applications.",
  "license": "MIT",
  "author": "Angga Saputra",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "keywords": [
    "hey-chatting",
    "real-time",
    "socket.io",
    "rxjs",
    "websockets",
    "nodejs-streams",
    "chat",
    "nodejs",
    "typescript",
    "javascript"
  ],
  "engines": {
    "node": ">=20"
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": false
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "jest",
    "test:ci": "npm test -- --coverage=true",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "example:basic": "node --loader ts-node/esm examples/example.ts",
    "prepublishOnly": "npm run build && npm run test",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "express": "^5.1.0",
    "rxjs": "^7.8.2",
    "socket.io": "^4.8.1",
    "cors": "^2.8.5",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/uuid": "^9.0.8",
    "@types/node": "^20.14.14",
    "@types/jest": "^29.5.12",
    "typescript": "^5.5.4",
    "tsup": "^8.2.4",
    "ts-node": "^10.9.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.4",
    "socket.io-client": "^4.8.1",
    "@types/supertest": "^6.0.2",
    "supertest": "^7.0.0"
  }
}